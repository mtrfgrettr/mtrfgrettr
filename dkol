        }
        .wp{
            width: 200px;
            height: 200px;
            background-color: #04be02;
            /* 十字形 */
            cursor: crosshair;
            /* 小手儿 */
            cursor: pointer;
            /* 移动效果 */
            cursor: move;
            /* 查看文本效果 */
            cursor: text;
            /* 鼠标等待效果 */
            cursor: wait;
            /* 带问号的箭头 */
            cursor: help;
            /* 禁用效果 */
            cursor: not-allowed;
            /* 默认指针 */
            cursor: default;
            /* 根据内容自己改变样式 */
            cursor: auto;
            /* 禁止用户选中文字 */
            user-select: none;
        }
        select{
            width: 200px;
            height: 40px;
            /* 重置样式 */
            appearance: none;
            background: url(./images/矢量智能对象3.png) no-repeat  160px center;
            background-size: 20px 10px;
        }
    </style>
